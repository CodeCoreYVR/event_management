<div class = "container">
<p class='admin-titles'>THE REPOSITORY OF EVENTS
  <%= link_to 'ADMIN INDEX', admin_index_path, class: "btn btn-primary back-lit-btn pull-right" %>
  <%= link_to 'CREATE NEW EVENT', new_admin_event_path, class: "btn btn-primary back-lit-btn pull-right" %>

  
</p>

  <table class="table table-striped" width="900px">
    <tr>
      <th>Row</th>
      <th>Title</th>
      <th>Date</th>
      <th>Total Seats</th>
      <th>Duration</th>
      <th>Seats Taken</th>
      <th>Seats Remaining</th>
      <th>Wait listed</th>
      <th>Speaker</th>

      <th>Linkedin</th>
      <th>Twitter</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
    <% rownumber=0 %>
    <% @events.each do |event| %>
    <div>
      <tr>
        <td><%= rownumber+=1 %></td>
        <td><%= event.title %></td>
        <td><%= event.date.to_formatted_s(:short)%></td>
        <td><%= event.seats %></td>
        <td><%= event.duration %></td>
        <td><%= event.seat_ownerships.length%></td>
        <td><%= event.seats - event.seat_ownerships.length%></td>
        <td><%=event.wait_listed.length%></td>
        <td><%= event.speaker %></td>


        <% if (!event.linkedin.blank?) %>
          <td><a href="<%=event.linkedin%>">Profile</a></td>
        <% else %>
          <td>&nbsp;</td>
        <% end %>

        <% if (!event.twitter.blank?) %>
          <td><a href="<%=event.twitter%>">Profile</a></td>
        <% else %>
          <td>&nbsp;</td>
        <% end %>

          <td><%= link_to "Show", admin_event_path(event) %></td>
          <td><%= link_to "Modify", edit_admin_event_path(event) %></td>
          <td><%= link_to "Delete", admin_event_path(event), method: :delete, data: {confirm: "Are you sure you want to delete this event?"}%></td>
          
        </tr>
      </div>
      <% end %>
    </table>
  </div>
</div>
