<%= semantic_form_for @attendee do |f| %>
<section id="about">
  <h1>About The Event/Speakers</h1>

<div class="row-fluid">
<% @events.each do |event| %>

    <div class="col-sm-6 col-md-12">
      <div class="thumbnail">
        <%= link_to (image_tag event.image(:medium), class: "post-thumb"), event %>
        <div class="caption">
          <%= link_to event.title,event, class: "post-thumb" %>
          <br>
          <p><%= event.body.truncate(100) %></p>
          <p><%=event.date.to_formatted_s(:short)%></p>
          <p><%= event.speaker %></p>
          <p><%= event.bio %></p>
          <% if (event.linkedin && event.linkedin!='') %>
          <p><a href="<%=event.linkedin%>">Linkedin Profile</a></p>
          <% else %>
          <p>&nbsp;</p>
          <% end %>
          <% if (event.twitter && event.twitter!='') %>
          <p><a href="<%=event.twitter%>">Twitter Profile</a></p>
          <% else %>
          <p>&nbsp;</p>
          <% end %>
          <%= label_tag("attendee[event_ids][]", "I want to attend #{event.speaker}'s session") %>
          <%=  check_box_tag "attendee[event_ids][]",event.id %>
        </div>
      </div>
    </div>
  
<% end %>
<div class="clearfix"></div>

  
</section>


