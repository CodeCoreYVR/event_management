<p>Hello <%= @attendee.name%>,</p>
<br>
<p>You've signed up to the following events at the CodeCore lunch and learns!</p>
<% if @has_seat_events[0]%>
  <% @has_seat_events.each do |event| %>
    <p>Event: <%= event.title %> featuring <%= event.speaker %></p>
    <p>Date: <%= formatted_date(event.date)%> </p>
    <p>Time: <%= formatted_time(event.date)%> </p>
    <br>  
  <% end %>
<% end %>
<% if @waitlist_events[0]%>
  <% @waitlist_events.each do |event| %>
    <p>Event: <%= event.title %> featuring <%= event.speaker %></p>
    <p>Date: <%= formatted_date(event.date)%> </p>
    <p>Time: <%= formatted_time(event.date)%> </p>
    <br>  
  <% end %>
<% end %>
