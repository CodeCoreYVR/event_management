<section id="photo3">
  <div class="schedule">
    <div class="row text-shadow"><h2 id="upcase-blk">Event Details and Schedule:</h2></div>
  </div>
  <div id="eventslist">
    <% @events.each do |event| %>
    <div class="hero-unit">
          <div class="row" id="<%=event.id%>" >
            
            <div class="col-md-3">
              <div class="center">
                <div class="thumbnail">
                  <%= image_tag event.image(:medium), class: "post-thumb"%></div>
                          <h3 id="upcase"><%= event.speaker %></h3>
                          <% if (event.linkedin && event.linkedin!='') %>
                                    <a class="profile-links" href="<%=event.linkedin%>"><i class="fa fa-linkedin-square fa-2x linkedin-social profile-links"></i></a>          
                                <% end %>          
                       
                              <% if (event.twitter && event.twitter!='') %>
                                    <a class="profile-links" href="<%=event.twitter%>"><i class="fa fa-twitter-square fa-2x twitter-social profile-links"></i></a>          
                                <% end %>

                          
                         
              </div>
            </div>
            <div class="col-md-6">
              <div class="caption">
                  <h4>Topic: <strong class="titles"><%= event.title %></strong></h4>
                  <p>Share Event <%= social_share_button_tag(event.title) %></p>
                  <p class="titles">Description: <%= event.body %></p>      
                  
                  <p class="titles"><%= event.bio %></p>
                  
              </div>
            </div>

            <div class="col-md-3">
              <div class="center">
                  <p id="upcase"><%= label_tag("attendee[event_ids][]", "I want to attend #{event.speaker}'s session:")%></p>
                  <br><br>
                  <%= check_box_tag "attendee[event_ids][]",event.id, false, data: { "class" => "custom_check" } %>
                  <br>
                  <p class="titles"><%=event.date.strftime("%A, %B %C")%></p>
                  <h5><%=event.date.strftime("%I:%M %p")%></h5>  
                  <div class="clearfix"></div>
              </div>  
            </div>                
        </div>
    </div>
    <div class="row">&nbsp;</div><!--  This row is to put a default distance between events -->
    <% end %>
  </div>


<div class="clearfix"></div>  
</section>